<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />

  <title><%= title %></title>

  <%= stylesheet_link_tag 'bower/bootstrap/dist/css/bootstrap' %>
  <%= stylesheet_link_tag 'edventure' %>

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-brand">Edventure TripDB</span>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">

      <ul class="nav navbar-nav">
        <% item_link_with_active(home_url) do %>
          <i class="glyphicon glyphicon-home"></i>
          <%= t('.home') %>
        <% end %>

        <% item_link_with_active new_client_url do %>
          <i class="glyphicon glyphicon-plus-sign"></i>
          New Client
        <% end %>

        <% item_link_with_active pending_trips_url do %>
          <i class="glyphicon glyphicon-hourglass"></i>
          Pending
        <% end %>

        <% item_link_with_active unpaid_reservations_url do %>
          <i class="glyphicon glyphicon-usd"></i>
          Payment Due
        <% end %>

        <% item_link_with_active paid_reservations_url do %>
          <i class="glyphicon glyphicon-tag"></i>
          Confirmed
        <% end %>
      </ul>

      <div id="mount-search" data-url="<%= h search_clients_url %>"></div>

    </div><!-- #navbar-collapse -->

  </div>
</nav>

<div class="container" id="main">
  <% if flash[:notice] %>
    <div class="alert alert-warning">
      <%= notice %>
    </div>
  <% end %>

  <%= yield %>
</div><!-- #main -->

  <%= javascript_include_tag 'bower/jquery/dist/jquery.min' %>
  <%= javascript_include_tag 'bower/bootstrap/dist/js/bootstrap.min' %>
  <%= javascript_include_tag 'bower/react/react-with-addons.min' %>
  <%= javascript_include_tag 'bower/react/react-dom.min' %>
  <%= javascript_include_tag 'pack/components.min' %>
  <%= javascript_include_tag 'application' %>

</body>
</html>
