<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="content-type" content="text/html; charset=UTF-8" />

  <title><%= title %></title>

  <%= stylesheet_link_tag 'bower/bootstrap/dist/css/bootstrap' %>
  <%= stylesheet_link_tag 'edventure' %>

  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-brand">Edventure TripDB</span>
    </div>

    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav">
        <% item_link_with_active(home_path) do %>
          <i class="glyphicon glyphicon-home"></i>
          <%= t('.home') %>
        <% end %>

        <% item_link_with_active companies_path do %>
          <i class="glyphicon glyphicon-apple"></i>
          <%= t('activerecord.models.company', :count => 0) %>
        <% end %>

        <% item_link_with_active clients_path do %>
          <i class="glyphicon glyphicon-user"></i>
          <%= t('activerecord.models.client', :count => 0) %>
        <% end %>

        <% item_link_with_active month_calendar_path do %>
          <i class="glyphicon glyphicon-calendar"></i>
          <%= t('calendar.month.today') %>
        <% end %>

        <% item_link_with_active trips_path do %>
          <i class="glyphicon glyphicon-plane"></i>
          <%= t('activerecord.models.trip', :count => 0) %>
        <% end %>

        <% item_link_with_active upcoming_trips_path do %>
          <i class="glyphicon glyphicon-time"></i>
          <%= t('.upcoming') %>
        <% end %>
      </ul>

      <div class="pull-right">
        <div class="btn-group navbar-btn">
          <button type="button" data-toggle="dropdown" class="btn btn-info dropdown-toggle">
            Language <span class="caret"></span>
          </button>

          <ul class="dropdown-menu dropdown-menu-right">
            <%= item_link_with_active 'EspaÃ±ol', current_url( :lc => :es ) %>
            <%= item_link_with_active 'English', current_url( :lc => :en ) %>
          </ul>
        </div><!-- .btn-group -->

      </div><!-- .pull-right -->
    </div><!-- #navbar-collapse -->

  </div>
</nav>

<div class="container" id="main">
  <% if flash[:notice] %>
    <div class="alert alert-warning">
      <%= notice %>
    </div>
  <% end %>

  <%= yield %>
</div><!-- #main -->

  <%= javascript_include_tag 'bower/jquery/dist/jquery.min' %>
  <%= javascript_include_tag 'bower/bootstrap/dist/js/bootstrap.min' %>
  <%= javascript_include_tag 'application' %>
</body>
</html>
