<ol class="breadcrumb">
  <li><%= link_to 'Home', home_url %></li>
  <li class="active">Clients</li>
</ol>

<div class="row">
  <div class="col-xs-12 text-center">
    <div class="btn-group">
      <% link_to new_client_url, class: 'btn btn-primary' do %>
        <i class="glyphicon glyphicon-plus-sign"></i>
        New Client
      <% end %>

      <% link_to export_clients_url, class: 'btn btn-info' do %>
        <i class="glyphicon glyphicon-export"></i>
        Export Contacts
      <% end %>
    </div>
  </div>
</div>

<h1>All Clients</h1>

<table class="table table-striped table-condensed">
  <tr>
    <th></th>
    <th><%= cl_f :family_name %></th>
    <th><%= cl_f :contact_name %></th>
    <th><%= cl_f :email %></th>
  </tr>

<% @clients.each do |client| %>
  <tr class="<%= cycle 'even', 'odd' %>">
    <td><i class="glyphicon glyphicon-user"></i></td>
    <td>
      <%= link_to client.family_name, client %>
    </td>
    <td><%=h client.contact_name %></td>
    <td><%= mail_to client.email %></td>
  </tr>
<% end %>
</table>

