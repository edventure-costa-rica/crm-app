<% form_for(@client) do |f| %>
  <%= f.error_messages %>

  <table style="border: none; background:transparent;width: inherit">
    <tr>
      <td style="text-align:left"><%= f.label :contact_title %></td>
      <td style="text-align:left"><%= f.label :contact_name %></td>
      <td style="text-align:left"><%= f.label :contact_gender %></td>
    </tr>
    <tr>
      <td><%= f.text_field :contact_title, :size => 10, :style => 'width:inherit' %></td>
      <td><%= f.text_field :contact_name %></td>
      <td><%= f.select :contact_gender, ['male','female'].
                map { |g| [ t(g), g ] }
          %></td>
    </tr>
  </table>
  <p>
    <%= f.label :family_name %><br />
    <%= f.text_field :family_name %>
  </p>
  <p>
    <%= f.label :nationality %><br />
    <%= f.text_field :nationality %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit submit_text %>
  </p>
<% end %>
