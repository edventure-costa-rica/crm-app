<% if @reservation %>
  <%= link_to t(:edit), edit_client_trip_reservation_path(@client, @trip, @reservation) %> |
  <%= link_to 'Voucher', voucher_client_trip_reservation_path(@client, @trip, @reservation) %> |
  <%= link_to t('.pay'), pay_client_trip_reservation_path(@client, @trip, @reservation) %>
<% else %>
  <%= link_to 'Vouchers', vouchers_client_trip_reservations_path(@client, @trip, @reservation) %> |
  <%= link_to t('.pays'), pays_client_trip_reservations_path(@client, @trip) %>
<% end %>

<br/>
<%=
Company.kinds.map do |kind|
  link_to t('.new', :for => kind),
    new_client_trip_reservation_path(@client, @trip, :kind => kind)
end.join " |\n"
%>