<p>
  <b><%=re_f :trip_id %>:</b>
  <%= link_to @reservation.trip, [@reservation.client, @reservation.trip] %> <br/>
  <%= h l @trip.arrival.to_date %> &dash;
  <%= h l @trip.departure.to_date %><br/>
  <%= t '.trip_duration' %>:
  <em><%= @trip.nights %></em>
</p>

<p>
  <b><%=re_f :client %>:</b>
  <%= link_to @reservation.client, @reservation.client %>
</p>

<p>
  <b><%=re_f :company %>:</b>
  <%= link_to @reservation.company, @reservation.company %>
</p>

<p>
  <b><%=re_f :reservation_id %>:</b>
  <%=h @reservation.reservation_id %>
</p>

<p>
  <b><%=re_f :arrival %>:</b>
  <%=h l @reservation.arrival, :format => :long %>
</p>

<p>
  <b><%=re_f :pickup_location %>:</b>
  <%=hnl @reservation.pickup_location %>
</p>

<p>
  <b><%=re_f :departure %>:</b>
  <%=h l @reservation.departure, :format => :long %>
</p>

<p>
  <b><%=re_f :dropoff_location %>:</b>
  <%=hnl @reservation.dropoff_location %>
</p>

<p>
  <b><%=re_f :services %>:</b>
  <%=hnl @reservation.services %>
</p>

<p>
  <b><%=re_f :price %>:</b>
  <%=h sprintf '$%0.2f', @reservation.price unless @reservation.price.nil? %>
</p>

<p>
  <b><%=re_f :net_price %>:</b>
  <%=h sprintf '$%0.2f', @reservation.net_price unless @reservation.net_price.nil? %>
</p>

<p>
  <b><%=h re_f :created_at %>:</b>
  <%=h l @client.created_at.to_date %>
</p>

<p>
  <b><%=h re_f :updated_at %>:</b>
  <%=h l @client.updated_at.to_date %>
</p>

<p>
  <b><%=re_f :notes %>:</b>
  <%=hnl @reservation.notes %>
</p>


<%= link_to t(:edit), edit_client_trip_reservation_path(@reservation.client, @reservation.trip, @reservation) %> |
<%= link_to t('.list_trip'), client_trip_reservations_path(@reservation.client, @reservation.trip) %> |
