<h1><%= t '.title' %></h1>

<table>
  <tr>
    <th><%= co_f :id %></th>
    <th><%= co_f :name %></th>
    <th><%= co_f :city %></th>
    <th><%= co_f :region %></th>
    <th><%= co_f :website %></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><em>#<%=h company.id %> </em></td>
    <td><%=h company.name %></td>
    <td><%=h company.city %></td>
    <td><%=h company.region %></td>
    <td><%= link_to company.website, company.website unless company.website.nil? %></td>
    <td><%= link_to t(:show), company %> |
        <%= link_to t(:edit), edit_company_path(company) %>
        <%# link_to t(:delete), company, :confirm => t(:confirm), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.new'), new_company_path %>