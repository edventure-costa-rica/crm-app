
<div class="row">
  <div class="col-xs-12 text-center">
    <div class="btn-group">
      <% link_to company_reservations_path(@company), class: 'btn btn-default' do %>
        <i class="glyphicon glyphicon-tags"></i>
        <%= t('.show_res') %>
      <% end %>
      <% link_to company_path(@company), class: 'btn btn-default' do %>
        <i class="glyphicon glyphicon-file"></i>
        <%= t(:show) %>
      <% end %>
      <% link_to @company, :confirm => t(:confirm), :method => :delete, class: 'btn btn-danger' do %>
        <i class="glyphicon glyphicon-remove"></i>
        <%= t(:delete) %>
      <% end %>
    </div>
  </div>
</div>

<div class="row margin-bottom-1">
  <div class="col-xs-12">
    <h1><%= t '.title' %></h1>
  </div>

  <div class="col-xs-12">
    <%= render :partial => @company, :locals => { :submit_text => t(:submit_update) } %>
  </div>
</div>

