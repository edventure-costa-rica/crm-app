<h1><%= t '.title' %> <%= l @date, format: :calendar_long %></h1>

<ul>
  <li><%= link_to t('calendar.week.title') + ' ' + l(@date, format: :calendar_long), week_calendar_url(date: @date) %></li>
  <li><%= link_to t('calendar.month.title') + ' ' + l(@date, format: :calendar_long), month_calendar_url(date: @date) %></li>
</ul>

<nav>
  <ul class="pager">
    <li class="previous">
      <% previous = @date - 1.day %>
      <% link_to day_calendar_url(date: previous) do %>
        &larr; <%= previous.strftime('%B %e') %>
      <% end %>
    </li>

    <li>
      <%= link_to 'Today', day_calendar_url(date: Date.today) %>
    </li>

    <li class="next">
      <% next_month = @date + 1.day %>
      <% link_to day_calendar_url(date: next_month) do %>
        <%= next_month.strftime('%B %e') %> &rarr;
      <% end %>
    </li>
  </ul>
</nav>

<%= render partial: 'entries' %>
