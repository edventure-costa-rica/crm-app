<ol class="breadcrumb">
  <li><%= link_to 'Home', home_url %></li>
  <li class="active">Calendar</li>
</ol>

<h1><%= t '.title' %> <%= l @date, format: :calendar_long %></h1>

<ul>
  <li><%= link_to t('calendar.day.title') + ' ' + l(@date, format: :calendar_long), day_calendar_url(date: @date) %></li>
  <li><%= link_to t('calendar.week.title') + ' ' + l(@date, format: :calendar_long), week_calendar_url(date: @date) %></li>
</ul>

<nav>
  <ul class="pager">
    <li class="previous">
      <% previous = @date - 1.month %>
      <% link_to month_calendar_url(date: previous) do %>
        &larr; <%= previous.strftime('%B') %>
      <% end %>
    </li>

    <li>
      <%= link_to t('.today'), month_calendar_url(date: Date.today) %>
    </li>

    <li class="next">
      <% next_month = @date + 1.month %>
      <% link_to month_calendar_url(date: next_month) do %>
        <%= next_month.strftime('%B') %> &rarr;
      <% end %>
    </li>
  </ul>
</nav>

<%= render partial: 'entries' %>
