<ol class="breadcrumb">
  <li><%= link_to 'Home', home_url %></li>
  <li class="active">Calendar</li>
</ol>

<h1><%= t '.title' %> <%= l @date, format: :calendar_long %></h1>

<ul>
  <li><%= link_to t('calendar.day.title') + ' ' + l(@date, format: :calendar_long), day_calendar_url(date: @date) %></li>
  <li><%= link_to t('calendar.month.title') + ' ' + l(@date, format: :calendar_long), month_calendar_url(date: @date) %></li>
</ul>

<nav>
  <ul class="pager">
    <li class="previous">
      <% previous = @date - 1.week %>
      <% link_to week_calendar_url(date: previous) do %>
        &larr; Week of <%= previous.strftime('%B %e') %>
      <% end %>
    </li>

    <li>
      <%= link_to t('.today'), week_calendar_url(date: Date.today) %>
    </li>

    <li class="next">
      <% next_ = @date + 1.week %>
      <% link_to week_calendar_url(date: next_) do %>
        Week of <%= next_.strftime('%B %e') %> &rarr;
      <% end %>
    </li>
  </ul>
</nav>


